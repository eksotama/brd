<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>  

        <record model="ir.ui.view" id="tree_brd_currentStockQuery">
            <field name="name">Tree Current Stock Query</field>
            <field name="model">brd.current_stock_query</field>
            <field name="arch" type="xml">
                <tree string="Current Stock Query" create="false" edit="false" delete="false">
                    <field name="product_id"/>
                    <field name="location_id"/>
                    <field name="lot_id"/>
                    <field name="quantity" sum="Total Quantity"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="search_brd_currentStockQuery">
            <field name="name">Search Current Stock Query</field>
            <field name="model">brd.current_stock_query</field>
            <field name="arch" type="xml">
                <search string="Search Search Current Stock Query">
                    <field name="product_id"/>
                    <field name="location_id"/>
                    <field name="lot_id"/>
                    <group name="group_by" string="Group By..">
                        <filter name="filter_product" string="Product" context="{'group_by':'product_id'}"/>
                        <filter name="filter_location" string="Location" context="{'group_by':'location_id'}"/>
                        <filter name="filter_lot" string="Lot" context="{'group_by':'lot_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
		<record id="waction_brd_currentStockQuery" model="ir.actions.act_window">
			<field name="name">Current Stock Query</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">brd.current_stock_query</field>
			<field name="search_view_id" ref="search_brd_currentStockQuery"/>
			<field name="view_type">form</field>
			<field name="view_mode">tree</field>			
		</record>
		
		<record id="wactionView_brd_currentStockQuery" model="ir.actions.act_window.view">
			<field eval="10" name="sequence"/>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="tree_brd_currentStockQuery"/>
			<field name="act_window_id" ref="waction_brd_currentStockQuery"/>
		</record>

    </data>
</openerp>
